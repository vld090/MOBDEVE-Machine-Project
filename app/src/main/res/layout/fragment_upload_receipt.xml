<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/etReceiptName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Receipt Name"/>

    <EditText
        android:id="@+id/etReceiptAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Amount"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/btnChooseImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Image"/>

    <ImageView
        android:id="@+id/ivReceiptImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="Selected receipt image"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/btnSubmitReceipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Receipt"/>

</LinearLayout>

